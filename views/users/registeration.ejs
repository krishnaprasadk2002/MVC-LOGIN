<%-include('../layouts/header.ejs')-%>
<section class="background-gradient overflow-hidden">
    <style>
      .background-gradient {
        background: linear-gradient(135deg, #c53fa1 10%, #2196F3 100%);
        height: 100vh;
      }
  
      .container {
        min-height: 100vh;
        padding-top: 50px; /* Adjust the padding-top value as needed */
      }
  
      #radius-shape-1 {
        height: 220px;
        width: 220px;
        top: -60px;
        left: -130px;
        background: radial-gradient(#FFD700, #FF6347);
        overflow: hidden;
      }
  
      #radius-shape-2 {
        border-radius: 38% 62% 63% 37% / 70% 33% 67% 30%;
        bottom: -60px;
        right: -110px;
        width: 300px;
        height: 300px;
        background: radial-gradient(#FF6347, #00CED1);
        overflow: hidden;
      }
  
      .bg-glass {
        background-color: rgba(255, 255, 255, 0.7) !important;
        backdrop-filter: saturate(180%) blur(20px);
      }
  
      h1, p, label {
        color: #333333; /* Dark text color */
      }
  
      .btn-primary {
        background-color: #FF6347; /* Button color */
        color: #ffffff; /* Button text color */
      }
    </style>
  
    <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
      <div class="row gx-lg-5 align-items-center mb-5">
        <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
          <h1 class="my-5 display-5 fw-bold ls-tight">
            Welcome to Our Website<br />
            <span>Your Success Starts Here</span>
          </h1>
          <p class="mb-4 opacity-70">
            Explore the possibilities and unlock your potential with our services.
          </p>
        </div>
  
        <div class="col-lg-6 mb-5 mb-lg-0 position-relative ">
          <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
          <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>
  
          <div class="card bg-glass">
            <div class="card-body px-4 py-4 px-md-5 ">


                <form action="/register" method="post" onsubmit="return validateForm();">


                <h4 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">SIGN INTO YOUR ACCOUNT</h4>
                
                <% if(typeof errorMessage !== 'undefined'){
                  %>
                  <p style="color:red;"><%= errorMessage %></p>
                  <%
                }
                %>

                <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example1">Name</label>
                    <input type="name" id="name" name="name" class="form-control" placeholder="Name" required/>
                  </div>

                  <div class="form-outline mb-4">
                    <label class="form-label" for="form3Example2">MobileNumber</label>
                    <input type="number" id="mobile" name="mobile" class="form-control" placeholder="MobileNumber" required/>
                  </div>
                  
  
                <div class="form-outline mb-4">
                  <label class="form-label" for="form3Example3">Email address</label>
                  <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" required/>
                </div>
  
                <div class="form-outline mb-4">
                  <label class="form-label" for="form3Example4">Password</label>
                  <input type="password" id="password" name="password" class="form-control" placeholder="Enter password" minlength="8" required/>
                </div>
  
                
                <div class="text-center text-lg-start mt-4 pt-2">
                  <button type="submit" value="register" class="btn btn-primary btn-lg" 
                    style="padding-left: 2.5rem; padding-right: 2.5rem;">SIGNUP</button>
                  <p class="small fw-bold mt-2 pt-1 mb-0">already have an account? <a href="/"
                      class="link-danger">Login</a></p>
                </div>
  
              </form>

              <% if(typeof message !== 'undefined'){
                %>
                <p style="color: green;"><%= message %></p>
                <%
              }
              %>


            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<%-include('../layouts/header.ejs')-%>


<script>
  function validateForm() {
    console.log("validateForm() called");

    const name = document.getElementById('name').value.trim();
    console.log("Name:", name);

    const mobile = document.getElementById('mobile').value.trim();
    console.log("Mobile:", mobile);

    const email = document.getElementById('email').value.trim();
    console.log("Email:", email);

    const password = document.getElementById('password').value.trim();
    console.log("Password:", password);

    if (name === "") {
        alert("Please enter your name");
        return false;
    }

    if (mobile === "") {
        alert("Please enter your mobile number");
        return false;
    }

   

    if (email === "") {
        alert("Please enter an email address");
        return false;
    }

    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
    if (!emailRegex.test(email)) {
        alert("Please enter a valid email address");
        return false;
    }

    if (!email.includes("@gmail.com")) {
        alert("Please enter a Gmail address");
        return false;
    }
    
    // if (password === "") {
    //     alert("Please enter a password");
    //     return false;
    // }

    if (password.length < 8) {
        alert("Password should be at least 8 characters long");
        return false;
    }

 
    return true;
}

</script>
